model ReadNovel {
  id String @id @default(cuid())

  userId String     @db.Uuid
  user   UserProfile @relation(fields: [userId], references: [id])

  novelId String
  novel   Novel  @relation(fields: [novelId], references: [id])

  currentChapterId String?
  currentChapter   NovelChapter? @relation("CurrentReadChapter", fields: [currentChapterId], references: [id])

  previousChapterId String?
  previousChapter   NovelChapter? @relation("PreviousReadChapter", fields: [previousChapterId], references: [id])

  lastReadAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, novelId])
  @@schema("public")
}

model Bookmark {
  id String @id @default(cuid())

  userId    String
  chapterId String
  chapter   NovelChapter @relation(fields: [chapterId], references: [id])

  position Int // Position within the chapter (e.g., paragraph number)
  note     String? // Optional note for the bookmark

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, chapterId, position])
  @@schema("public")
}

model ReadStreak {
  id String @id @default(cuid())

  userId String
  date   DateTime

  chapterId String
  chapter   NovelChapter @relation("ReadChapter", fields: [chapterId], references: [id])

  minutesRead Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date, chapterId])
  @@schema("public")
}

model Novel {
  id String @id @default(cuid())
  title String
  author String
  description String
  coverImage String
  genre String[]

  chapters NovelChapter[]
  readers ReadNovel[]
  sources NovelSource[]

  publishedAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title], name: "idx_novel_title")
  @@index([author], name: "idx_novel_author")

  @@schema("public")
}

model NovelChapter {
  id String @id @default(cuid())
  
  number Int
  title String
  content String

  novelId String
  novel Novel @relation(fields: [novelId], references: [id])

  bookmarks Bookmark[]
  readStreaks ReadStreak[] @relation("ReadChapter")

  currentReads ReadNovel[] @relation("CurrentReadChapter")
  previousReads ReadNovel[] @relation("PreviousReadChapter")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("public")
}