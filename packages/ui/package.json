{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./components": "./dist/components/index.js",
    "./components/*": "./dist/components/*/index.js",
    "./hooks": "./dist/hooks/index.js",
    "./hooks/*": "./dist/hooks/*/index.js",
    "./styles.css": "./dist/index.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run generate-exports && npm run build:styles && npm run build:components",
    "ui:build": "npm run generate-exports && npm run build:styles && npm run build:components",
    "ui:dev": "npm run generate-exports && npm run dev:styles && npm run dev:components",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0",
    "generate-exports": "node scripts/generate-exports.js"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.0",
    "eslint": "^9.26.0",
    "tailwindcss": "^4.1.5",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.3",
    "@tabler/icons-react": "^3.31.0",
    "lottie-react": "^2.4.1",
    "next-themes": "^0.4.6",
    "zustand": "^5.0.4"
  }
}