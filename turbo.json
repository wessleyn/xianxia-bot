{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_ENV"
  ],
  "tasks": {
    "build": {
      "env": [
        "NODE_ENV=production",
        "TURBO_DEFAULT=1"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "dependsOn": [
        "^build",
        "ui:build"
      ]
    },
    "ui:dev": {
      "cache": false,
      "persistent": true
    },
    "ui:build": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV"
      ],
      "dependsOn": [
        "ui:dev"
      ]
    },
    "start": {
      "dependsOn": [
        "build"
      ],
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "clean": {
      "cache": false
    }
  }
}